{
  "$id": "TweetTimeline",
  "$schema": "https://schema.yext.com/config/km/connector/v1",
  "displayName": "Tweet Timeline",
  "entityType": "ce_tweet",
  "source": {
    "sourceConfig": {
      "apiPullConfig": {
        "requestType": "GET",
        "url": "https://api.twitter.com/2/users/19165996/tweets",
        "authentication": {
          "bearerToken": "${{km/connector.TweetTimeline.api_bearer_token}}"
        },
        "paginationControl": {
          "cursorPagination": {
            "pageKey": "pagination_token",
            "cursor": "meta.next_token",
            "cursorType": "TOKEN",
            "detectCursorInHeader": false
          }
        },
        "headers": {},
        "queryParams": {
          "exclude": "retweets",
          "expansions": "author_id,attachments.media_keys",
          "max_results": "100",
          "media.fields": "preview_image_url,url",
          "tweet.fields": "created_at,referenced_tweets,text,public_metrics,author_id,source,possibly_sensitive",
          "user.fields": "profile_image_url,name,username,verified"
        },
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "data"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Text",
        "path": "text"
      },
      {
        "type": "JSON",
        "header": "Date",
        "path": "created_at"
      },
      {
        "type": "JSON",
        "header": "Author",
        "path": "author_id"
      },
      {
        "type": "JSON",
        "header": "Possibly Sensitive",
        "path": "possibly_sensitive"
      },
      {
        "type": "JSON",
        "header": "Retweets",
        "path": "public_metrics.retweet_count"
      },
      {
        "type": "JSON",
        "header": "Replies",
        "path": "public_metrics.reply_count"
      },
      {
        "type": "JSON",
        "header": "Likes",
        "path": "public_metrics.like_count"
      },
      {
        "type": "JSON",
        "header": "Quotes",
        "path": "public_metrics.quote_count"
      },
      {
        "type": "JSON",
        "header": "Source",
        "path": "source"
      }
    ]
  },
  "transforms": [
    {
      "function": {
        "inputHeaders": {
          "headers": [
            "Author"
          ]
        },
        "plugin": "Replace User ID",
        "function": "insertUsername"
      }
    },
    {
      "findAndReplace": {
        "inputHeaders": {
          "headers": [
            "Author"
          ]
        },
        "valueToFind": {
          "plainText": {
            "value": "@@",
            "ignoreCase": false
          }
        },
        "replacement": "@"
      }
    },
    {
      "extractText": {
        "inputHeader": "Date",
        "newColumnHeader": "Date Converted",
        "extractOperation": "ALL_TEXT_BEFORE",
        "extractFrom": "FIRST_INSTANCE_MATCHING_TEXT",
        "valueToFind": {
          "plainText": {
            "value": "T",
            "ignoreCase": false
          }
        }
      }
    },
    {
      "findAndReplace": {
        "inputHeaders": {
          "headers": [
            "Possibly Sensitive"
          ]
        },
        "valueToFind": {
          "plainText": {
            "value": "false",
            "ignoreCase": false
          }
        },
        "replacement": "no"
      }
    },
    {
      "findAndReplace": {
        "inputHeaders": {
          "headers": [
            "Possibly Sensitive"
          ]
        },
        "valueToFind": {
          "plainText": {
            "value": "true",
            "ignoreCase": false
          }
        },
        "replacement": "yes"
      }
    }
  ],
  "mappings": [
    {
      "field": "yext/datePosted",
      "header": "Date Converted",
      "subfieldPath": []
    },
    {
      "field": "c_retweets",
      "header": "Retweets",
      "subfieldPath": []
    },
    {
      "field": "yext/entityId",
      "header": "Entity ID",
      "subfieldPath": []
    },
    {
      "field": "c_possiblySensitive",
      "header": "Possibly Sensitive",
      "subfieldPath": []
    },
    {
      "field": "yext/body",
      "header": "Text",
      "subfieldPath": []
    },
    {
      "field": "c_quotes",
      "header": "Quotes",
      "subfieldPath": []
    },
    {
      "field": "c_likes",
      "header": "Likes",
      "subfieldPath": []
    },
    {
      "field": "c_replies",
      "header": "Replies",
      "subfieldPath": []
    },
    {
      "field": "yext/name",
      "header": "Date",
      "subfieldPath": []
    },
    {
      "field": "c_source",
      "header": "Source",
      "subfieldPath": []
    },
    {
      "field": "c_twitterUsername",
      "header": "Author",
      "subfieldPath": []
    }
  ],
  "scheduleConfig": {
    "useSourceSchedule": false,
    "runMode": "DEFAULT"
  }
}